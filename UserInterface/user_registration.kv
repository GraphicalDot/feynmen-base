#:kivy 1.10.0
#:include userpage.kv

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)


<UserRegistration>:
    BoxLayout:
        padding: 0,0,0,0
        spacing: 0
        size_hint: 1,1
        orientation: "vertical"
        
        BoxLayout:
            spacing: [0, 0]
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                size_hint: 1,0.3
                Label:
                    size_hint: 1,0.3
                    text: "Username"
                TextInput:
                    id: username
                    size_hint: 1,0.3
                    text:''
                    multiline: False

            BoxLayout:
                orientation: "horizontal"
                size_hint: 1, 0.3
                Label:
                    size_hint: 1,0.3
                    text: "Password"
                TextInput:
                    id: password
                    size_hint: 1,0.3
                    password: True
                    text:''
                    multiline: False
            BoxLayout:
                size_hint_y: None
                height: 30
                Button:
                    text: 'Load'
                    on_release: root.show_load()
                Button:
                    text: 'Save'
                    on_release: root.show_save()

        BoxLayout:
            orientation: "horizontal"
            padding: 10,10,10,10
            spacing: 10
        
            Button:
                size_hint: 1,0.25
                text: "Submit"
            Button:
                size_hint: 1,0.25
                text: "Cancel"
                on_press: root.on_cancel()

