#:import ListItemButton kivy.uix.listview.ListItemButton
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import DictAdapter kivy.adapters.dictadapter
#:import CompositeListItem kivy.uix.listview
#:import SelectableView kivy.uix.listview


<UserPage>:
    BoxLayout:
        padding: [20, 20, 20, 20]
        spacing: [10, 10]
        size_hint: 1, 1
        orientation: "vertical"

        BoxLayout:
            id: l_id
            orientation: 'vertical'
            ListView:
                id: l_id
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: 0.5, 0.7

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 1
            Label:
                text: "Store data, You can store any file in a decentralize manner, encrypted with your public key"
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]
            
            Button:
                size_hint: 1,0.3
                text: "Store Data"
                on_press: root.store_data()

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 1
            Label:
                text: "Create Asset, An asset will be created from the data that has been previously stored"
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]
            
            Button:
                size_hint: 1,0.3
                text: "Create Asset"
                on_press: root.create_asset()

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 1
            Label:
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]
                text: "Transfer Asset, You can transfer this asset to any other person"
            Button:
                size_hint: 1,0.3
                text: "Transfer Asset"
                on_press: root.transfer_asset()

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 1
            Button:
                size_hint: 1,0.3
                text: "Cancel"
                on_press: root.on_cancel()