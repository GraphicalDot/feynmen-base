#Reference userpage.py



<WrappedButton@Button>:
    markup: True
    background_normal: ''
    background_color: hex("#356141")
    size_hint_y: (root.width)/10



<WrappedLabel@Label>:
    markup: True
    background_normal: ''
    color: hex("#561c76")


<UserPage>:
    
    size_hint: 1, 1

    TabbedPanel:
        do_default_tab: False
        tab_width: self.size[0]/len(self.tab_list)
        TabbedPanelItem:
            background_color: hex("#356141")
            text: 'Key/Pairs'
            Label:
                text: 'First tab content area'


        TabbedPanelItem:
            background_color: hex("#356141")
            text: 'Store Content'
            BoxLayout:
                orientation: "vertical"
                spacing: 10, 10
                padding: [5, 5, 5, 5]
                BoxLayout:
                    size_hint_y: 0.2
                    padding: [10, 10, 10, 10]

                    orientation: "horizontal"
                    Label:
                        text: "File to be stored"
                    Label:
                        id: ipfs_file_location
                        text: root.file
                        text_size: self.width, None
                        height: self.texture_size[1]
                    Button:
                        text: 'Load'
                        size_hint: 1, 0.5
                        on_press: root.open("ipfs_file_location")

                BoxLayout:
                    canvas:
                        Color:
                            rgb: 0, 0, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    ScrollView:
                        # setting the width of the scrollbar to 50pixels
                        bar_width: 50
                        # setting the color of the active bar using rgba
                        bar_color: 5, 10, 15, .8
                        # setting the color of the inactive bar using rgba
                        bar_inactive_color: 5, 20, 10, .5
                        # setting the content only to scroll via bar, not content
                        scroll_type: ['bars']
                        bar_width: 4
                        id: tab_1
        TabbedPanelItem:
            background_color: hex("#356141")
            text: 'Jobs'
            BoxLayout:
                Label:
                    text: 'Second tab content area'
                Button:
                    text: 'Button that does nothing'

        TabbedPanelItem:
            background_color: hex("#356141")
            text: 'Transfer Asset'
            RstDocument:
