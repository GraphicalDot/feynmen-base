<WrappedButton@Button>:
    markup: True
    background_normal: ''
    background_color: hex("#356141")
    size_hint_y: (root.width)/10



<WrappedLabel@Label>:
    markup: True
    background_normal: ''
    color: hex("#561c76")


<UserPage>:
    
    size_hint: 1, 1

    TabbedPanel:
        do_default_tab: False
        tab_width: self.size[0]/len(self.tab_list)
        TabbedPanelItem:
            background_color: hex("#356141")
            text: 'Key/Pairs'
            Label:
                text: 'First tab content area'

        TabbedPanelItem:
            background_color: hex("#356141")
            text: 'Store content'
            BoxLayout:
                Label:
                    text: 'Second tab content area'
                Button:
                    text: 'Button that does nothing'

        TabbedPanelItem:
            background_color: hex("#356141")
            text: 'Transfer Asset'
            RstDocument:
                text:
                    '\\n'.join(("Hello world", "-----------",
                    "You are in the third tab."))

        TabbedPanelItem:
            background_color: hex("#356141")
            text: 'Jobs'
            size_hint: 1, 1
            ScrollView:
                # setting the width of the scrollbar to 50pixels
                bar_width: 50
                # setting the color of the active bar using rgba
                bar_color: 5, 10, 15, .8
                # setting the color of the inactive bar using rgba
