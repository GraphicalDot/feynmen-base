#:kivy 1.10.0
#:include Application/userpage.kv
#:include user_registration.kv
#:include forgot_password.kv
#:import hex kivy.utils.get_color_from_hex



<LoginPage>:
    GridLayout:
        cols: 2
        spacing: 0
        orientation: "horizontal"
        BoxLayout:
            orientation: "vertical"
            size_hint: 1,1

            Image
                source: '/home/feynman/logo.png'
                mipmap: True
                width: self.width
                height: self.height
                allow_stretch:False
                keep_ratio:True
        GridLayout:
            cols: 1
            padding: 0,0,0,0
            spacing: 10, 10
            size_hint: 1, .2
            orientation: "vertical"
            
            GridLayout:
                cols: 2
                orientation: "vertical"
                row_force_default: True
                row_default_height: 50
                spacing: [10, 10]
                padding: [10, 100, 10, 10]
                

                Label:
                    text: "[b][color=#3d7f4c]Username[/b]"
                    markup: True
                TextInput:
                    id: username
                    hint_text: "[b]username[/b]"
                    markup: True
                    text:''
                    multiline: False


                WrappedLabel:
                    text: "[b][color=#3d7f4c]Password[/b]"
                TextInput:
                    id: password
                    hint_text: "password"
                    password: True
                    text:''
                    multiline: False

            GridLayout:
                orientation: "vertical"
                padding: 10,10,10,10
                spacing: 10
                size_hint: 1, .4
                cols: 1
                WrappedButton:
                    text: "[b][color=#3d7f4c]Login[/b]"
                    markup: True
                    on_press: root.do_login(username.text, password.text)
                WrappedButton:
                    text: "Register"
                    on_press: root.do_registration()
                WrappedButton:
                    text: "Forgot Password"
                    on_press: root.do_forgot_password()
                    